<?xml version="1.0" encoding="UTF-8"?>
<configuration>


    <!-- 콘솔로 로그 출력 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 파일로 로그 출력 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- 로그 롤링 정책 설정 (필요한 경우 추가) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/logs/app/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 30일간 보관 -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 사용자 접속 로그 파일로 로그 출력 설정 -->
    <appender name="USER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- 로그 롤링 정책 설정 (필요한 경우 추가) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/logs/user/user.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 30일간 보관 -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss}%msg%n</pattern>
        </encoder>
    </appender>

    <!-- 사용자 접속 로그 logger -->
    <logger name="knu.fest.user.logger" level="INFO" additivity="false">
        <appender-ref ref="USER_LOG" />
    </logger>

    <!-- root logger -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>